<aside>

    <fieldset>
        <legend>Parametry</legend>
        <form>
            <div class="input_wrapping">
                <h4>Ilość komórek:</h4>
                <label>w poziomie
                    <input type="number" name="horizontal_amount" value="20" min="20" max="800">
                </label>
                <label>w pionie
                    <input type="number" name="vertical_amount" value="10" min="10" max="600">
                </label>
                <input type="button" name="set" value="ustaw">
            </div>
            <div class="input_wrapping">
                <label>szybkość symulacji
                    <input type="range" name="frequency" value="10" min="0.5" max="20" step="0.1">
                </label>
            </div>
            <div class="input_wrapping">
                <input type="button" name="start" value="start">
                <input type="button" name="next" value="następny krok">

            <!--<div class="input_wrapping">
                <input type="button" name="test" value="test">
            </div>-->

                <input type="button" name="reset" value="reset">
            </div>
            <div class="input_wrapping">
                <label>tryb gry
                    <select name="mode">
                        <option value="0">zabawa</option>
                        <option value="1">symulacje</option>
                    </select>
                </label>
            </div>
            <div class="input_wrapping">
                <input type="button" value="Zapisz" name="save">
            </div>
        </form>
    </fieldset>

    <fieldset>
        <legend>Stan układu</legend>
        <p>Efektywna szybkość: <span id="frequency"></span> fps</p>
        <p>Ilość żywych komórek: <span id="lived_amount"></span></p>
        <p>Stan układu: <span id="game_state"></span></p>
        <p>Wiek układu: <span id="game_age">0</span></p>
    </fieldset>

</aside>